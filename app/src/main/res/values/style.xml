<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--region Base-->
    <style name="BaseRootStyle">
        <item name="android:background">@color/dark_jungle_green</item>
    </style>

    <style name="BaseProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/white</item>
        <item name="indicatorColor">@color/white</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="BaseItemMaterialCardView">
        <item name="android:layout_margin">10dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="cardBackgroundColor">@color/dark_charcoal</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">10dp</item>
    </style>
    <!--endregion-->

    <!--region ItemCharacter-->
    <style name="TextItemCharacterSubtitle">
        <item name="android:textColor">@color/gray_c8</item>
        <item name="android:textSize">@dimen/textSize_item_character_subtitle</item>
    </style>

    <style name="TextItemCharacterDescription">
        <item name="android:ellipsize">end</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@drawable/selector_clickable_text_color</item>
        <item name="android:textSize">@dimen/textSize_item_character_description</item>
    </style>
    <!--endregion-->

    <!--region SearchViewCursorColor-->
    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>
    <!--endregion-->

</resources>